<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape>
            <corners android:radius="5dip" />
            <gradient
                android:startColor="#E6F8F4"
                android:centerColor="#94AFD8"
                android:centerY="0.75"
                android:endColor="#91BBE8"
                android:angle="270"
                />
        </shape>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners
                    android:radius="5dip" />
                <gradient
                    android:startColor="#A00B57EF"
                    android:endColor="#A098F1FA"
                    android:angle="270"
                    />
            </shape>
        </clip>
    </item>
</layer-list>